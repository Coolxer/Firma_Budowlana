@model firma_budowlana.Models.umowy

<div>
    <div class="row">
        <h2 class="col-12 table-header">Usuwanie umowy</h2>
    </div>

    <div class="row">
        <hr class="my-2 col-8 table-line">
    </div>

    <div class="row">
        <h6 class="col-12 table-header" style="color: red">UWAGA: Jeśli na podstawie umowy została już wystawiona faktura, to należy ją usunąć. W przeciwnym wypadku system zwróci błąd.</h6>
    </div>

    <div class="row">
        <hr class="my-2 col-8 table-line">
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-dark table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.typ)
                    </th>
                    <th>
                        data wystawienia
                    </th>
                    <th>
                        klient
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.typ)
                    </td>
                    <td>
                        @Convert.ToDateTime(Model.data_wystawienia).ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.zlecenia.zgloszenia.klienci.dane_personalne.imie)
                        @Html.DisplayFor(model => model.zlecenia.zgloszenia.klienci.dane_personalne.nazwisko)
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="row">
        <hr class="my-2 col-8 table-line">
    </div>


    <h4 class="table-header">Czy jesteś pewien, że chcesz usunąć tą umowę?</h4>

    <div class="col-5 operation-question">
        <div class="row operation-answer">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <input type="submit" value="Tak" class="col-4 btn btn-primary btn-lg" />

                <a class="col-4 btn btn-primary btn-lg" href="~/Agreements/Index">Nie</a>
            }
        </div>
    </div>
</div>

