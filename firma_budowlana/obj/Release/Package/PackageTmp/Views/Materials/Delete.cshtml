@model firma_budowlana.Models.materialy

<div>
    <div class="row">
        <h2 class="col-12 table-header">Usuwanie materiału</h2>
    </div>

    <div class="row">
        <hr class="my-2 col-8 table-line">
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-dark table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.nazwa)
                    </th>
                    <th>
                        ilość
                    </th>
                    <th>
                        wartość [zł]
                    </th>
                    <th>
                        nr zlecenia
                    </th>
                    <th>
                        magazyn
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.nazwa)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.ilosc)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.wartosc)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.zarezerwowany_dla)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.magazyny.nazwa)
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="row">
        <hr class="my-2 col-8 table-line">
    </div>


    <h4 class="table-header">Czy jesteś pewien, że chcesz usunąć ten materiał?</h4>

    <div class="col-5 operation-question">
        <div class="row operation-answer">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <input type="submit" value="Tak" class="col-4 btn btn-primary btn-lg" />

                <a class="col-4 btn btn-primary btn-lg" href="~/Materials/Index">Nie</a>
            }
        </div>
    </div>
</div>

