@model firma_budowlana.Models.klienci

<div>
    <div class="row">
        <h2 class="col-12 table-header">Edytowanie Klienta</h2>
    </div>

    <div class="row">
        <hr class="my-2 col-8 table-line">
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)

    <div class="form-group">
        @Html.LabelFor(model => model.nazwa_firmy, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.nazwa_firmy, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nazwa_firmy, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.nip, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.nip, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nip, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-5 operation-question">
            <div class="row operation-answer">
                <input type="submit" value="Akceptuj" class="col-4 btn btn-primary btn-lg" />
                <a class="col-4 btn btn-primary btn-lg" href="~/Customers/Index">Anuluj</a>
            </div>
        </div>
    </div>
</div>
    }

</div>


<div>
    @Html.ActionLink("Anuluj", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
