@model firma_budowlana.Models.klienci

<div>
    <div class="row">
        <h2 class="col-12 table-header">Usuwanie Klienta</h2>
    </div>

    <div class="row">
        <hr class="my-2 col-8 table-line">
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-dark table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.dane_personalne.imie)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.dane_personalne.nazwisko)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.dane_personalne.pesel)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.dane_personalne.nr_telefonu)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.dane_personalne.email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.nazwa_firmy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.nip)
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.dane_personalne.imie)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.dane_personalne.nazwisko)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.dane_personalne.pesel)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.dane_personalne.nr_telefonu)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.dane_personalne.email)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.nazwa_firmy)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.nip)
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="row">
        <hr class="my-2 col-8 table-line">
    </div>

    
    <h4 class="table-header">Czy jesteś pewien, że chcesz usunąć tego klienta?</h4>

    <div class="col-5 operation-question">
        <div class="row operation-answer">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <input type="submit" value="Tak" class="col-4 btn btn-primary btn-lg" />

                <a class="col-4 btn btn-primary btn-lg" href="~/Customers/Index">Nie</a>
            }
            </div>
    </div>
</div>

