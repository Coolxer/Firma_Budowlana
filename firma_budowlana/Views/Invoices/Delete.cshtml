@model firma_budowlana.Models.faktury

<div>
    <div class="row">
        <h2 class="col-12 table-header">Usuwanie faktury</h2>
    </div>

    <div class="row">
        <hr class="my-2 col-8 table-line">
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-dark table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        nr umowy
                    </th>
                    <th>
                        rodzaj płatnosci
                    </th>
                    <th>
                        wartość [zł]
                    </th>
                    <th>
                        termin płatnosci
                    </th>
                    <th>
                        data wystawienia
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.nr_umowy)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.rodzaj_platnosci)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.wartosc)
                    </td>
                    <td>
                        @Convert.ToDateTime(Model.termin_platnosci).ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @Convert.ToDateTime(Model.data_wystawienia).ToString("dd/MM/yyyy")
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="row">
        <hr class="my-2 col-8 table-line">
    </div>


    <h4 class="table-header">Czy jesteś pewien, że chcesz usunąć tą fakturę?</h4>

    <div class="col-5 operation-question">
        <div class="row operation-answer">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <input type="submit" value="Tak" class="col-4 btn btn-primary btn-lg" />

                <a class="col-4 btn btn-primary btn-lg" href="~/Invoices/Index">Nie</a>
            }
        </div>
    </div>
</div>

