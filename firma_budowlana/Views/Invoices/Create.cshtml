@model firma_budowlana.Models.faktury

<div class="row">
    <h2 class="col-12 table-header">Dodawanie faktury</h2>
</div>

<div class="row">
    <hr class="my-2 col-8 table-line" />
</div>


@using (Html.BeginForm())
{
@Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group row">
        @Html.LabelFor(model => model.nr_umowy, "Nr umowy", htmlAttributes: new { @class = "control-label col-4" })
        <div class="col-8">
            @Html.EditorFor(model => model.nr_umowy, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nr_umowy, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.rodzaj_platnosci, htmlAttributes: new { @class = "control-label col-4" })
        <div class="col-8">
            @Html.EditorFor(model => model.rodzaj_platnosci, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.rodzaj_platnosci, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.termin_platnosci, htmlAttributes: new { @class = "control-label col-4" })
        <div class="col-8">
            @Html.EditorFor(model => model.termin_platnosci, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.termin_platnosci, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.data_wystawienia, htmlAttributes: new { @class = "control-label col-4" })
        <div class="col-8">
            @Html.EditorFor(model => model.data_wystawienia, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.data_wystawienia, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-12 operation-question">
            <div class="row operation-answer">
                @using (Html.BeginForm()) {
                <input type="submit" value="Dodaj" class="col-4 btn btn-primary btn-lg" />

                <a class="col-4 btn btn-primary btn-lg" href="~/Invoices/Index">Anuluj</a>
                }
            </div>
        </div>
    </div>
</div>
}

@section Scripts {
@Scripts.Render("~/bundles/jqueryval")
}