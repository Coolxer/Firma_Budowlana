@model firma_budowlana.Models.maszyny

<div class="row">
    <h2 class="col-12 table-header">Edytowanie maszyny</h2>
</div>

<div class="row">
    <hr class="my-2 col-8 table-line" />
</div>

@using (Html.BeginForm())
{
@Html.AntiForgeryToken()

<div class="form-horizontal col-xl-4 col-lg-7 col-md-8 col-sm-10 col-12">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group row">
        @Html.LabelFor(model => model.nazwa, "nazwa", htmlAttributes: new
        {
        @class = "control-label col-5"
        })
        <div class="col-7">
            @Html.EditorFor(model => model.nazwa, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nazwa, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.sprawna, htmlAttributes: new { @class = "control-label col-5" })
        <div class="col-7">
            @Html.EditorFor(model => model.sprawna, new { htmlAttributes = new { @class = "form-control disabled" } })
            @Html.ValidationMessageFor(model => model.sprawna, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.zajeta, htmlAttributes: new { @class = "control-label col-5" })
        <div class="col-7">
            @Html.EditorFor(model => model.zajeta, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.zajeta, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-12 operation-question">
            <div class="row operation-answer">
                @using (Html.BeginForm())
                {
                <input type="submit" value="Akceptuj" class="col-4 btn btn-primary btn-lg" />

                <a class="col-4 btn btn-primary btn-lg" href="~/Machines/Index">Anuluj</a>
                }
            </div>
        </div>
    </div>
</div>
}@section Scripts {
@Scripts.Render("~/bundles/jqueryval")
}