<!DOCTYPE html>
<html lang="pl">

<head>
    <meta charset="utf-8" />

    <meta name="description" content="Firma Budowlana">
    <meta name="author" content="Łukasz Miłoś, Bartłomiej Watras">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - Firma Budowlana</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/css/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <div class="container-fluid">
        <nav class="navbar navbar-expand-lg navbar-dark">
            <a class=" navbar-brand" href="#">Firma Budowlana</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/home">Strona główna <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/about">O firmie</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/contact">Kontakt</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/PersonalData">Dane Personalne</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Customers">Klienci</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Workers">Pracownicy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Managers">Kierownicy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/WorkingGroups">Grupy Robocze</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Notifications">Zgłoszenia</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Tasks">Zlecenia</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Machines">Maszyny</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Materials">Materiały</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Warehouses">Magazyny</a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="row body-content">
            <div class="col-10 ">
                @RenderBody()
            </div>
        </div>

        <div class="row">
            <footer class="col-12 py-3">
                <p>&copy; @DateTime.Now.Year - Łukasz Miłoś, Bartłomiej Watras</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>
