@model firma_budowlana.Models.umowy

<div class="row">
    <h2 class="col-12 table-header">Edytowanie umowy</h2>
</div>

<div class="row">
    <hr class="my-2 col-8 table-line" />
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal col-xl-4 col-lg-7 col-md-8 col-sm-10 col-12">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            @Html.LabelFor(model => model.nr_zlecenia, "nr zlecenia", htmlAttributes: new
            {
                @class = "control-label col-5"
            })
            <div class="col-7">
                @Html.DropDownList("nr_zlecenia", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.nr_zlecenia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.typ, htmlAttributes: new { @class = "control-label col-5" })
            <div class="col-7">
                @Html.DropDownListFor(model => model.typ, new List<SelectListItem> {
                new SelectListItem() {Text = "umowa o generalne wykonawstwo", Value = "umowa o generalne wykonawstwo"},
                new SelectListItem() {Text = "umowa o wykonawstwo częściowe", Value = "umowa o wykonawstwo częściowe"},
                new SelectListItem() {Text = "umowa o podwykonawstwo", Value = "umowa o podwykonawstwo"}}, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.typ, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-12 operation-question">
                <div class="row operation-answer">
                    @using (Html.BeginForm())
                    {
                        <input type="submit" value="Akceptuj" class="col-4 btn btn-primary btn-lg" />

                        <a class="col-4 btn btn-primary btn-lg" href="~/Agreements/Index">Anuluj</a>
                    }
                </div>
            </div>
        </div>
    </div>
}@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}