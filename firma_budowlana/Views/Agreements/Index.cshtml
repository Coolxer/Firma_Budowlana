@model IEnumerable<firma_budowlana.Models.umowy>

<div>
    <div class="row">
        <h2 class="col-12 table-header">Tabela : <span class="table-name">umowy</span></h2>
    </div>

    <div class="row">
        <hr class="my-2 col-8 table-line">
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-dark table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        nr
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.typ)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.data_wystawienia)
                    </th>
                    <th>
                        Klient
                    </th>
                    <th class="table-operation">
                        Edytuj
                    </th>
                    <th class="table-operation">
                        Usuń
                    </th>
                </tr>
            </thead>
            @{ int row = 0; }

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td> @(row += 1)</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.typ)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.data_wystawienia)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.zlecenia.zgloszenia.autor_zgloszenia)
                        </td>
                        <td class="table-operation">
                            <a href="Agreements/Edit/@item.id">
                                <i class="fas fa-edit"></i>
                            </a>
                        </td>
                        <td class="table-operation">
                            <a href="Agreements/Delete/@item.id">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <a class="btn btn-primary btn-lg btn-block" href="Agreements/Create">Dodaj umowę</a>
</div>