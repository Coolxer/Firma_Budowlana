@model firma_budowlana.Models.zgloszenia

<div class="row">
    <h2 class="col-12 table-header">Dodawanie zgłoszenia</h2>
</div>

<div class="row">
    <hr class="my-2 col-8 table-line" />
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal col-xl-4 col-lg-7 col-md-8 col-sm-10 col-12">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group row">
        @Html.LabelFor(model => model.autor_zgloszenia, "autor", htmlAttributes:
         new { @class = "control-label col-5" })
        <div class="col-7">
            @Html.DropDownList("autor_zgloszenia", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.autor_zgloszenia, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.opis, htmlAttributes: new { @class = "control-label col-5" })
        <div class="col-7">
            @Html.EditorFor(model => model.opis, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.opis, "", new { @class = "text-danger" })
        </div>
    </div>

    @Html.HiddenFor(model => model.data_utworzenia, new { Value = System.DateTime.Now.ToShortDateString() })

    <div class="form-group">
        <div class="col-12 operation-question">
            <div class="row operation-answer">
                @using (Html.BeginForm())
                {
                    <input type="submit" value="Dodaj" class="col-4 btn btn-primary btn-lg" />

                    <a class="col-4 btn btn-primary btn-lg" href="~/Notifications/Index">Anuluj</a>
                }
            </div>
        </div>
    </div>
</div>
}@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}